          <center>{{section.settings.maintitle }}</center>
        </h3>
      </div>
    </div>
    <div class="grid--flex grid--principle-icons medium-up--show-flex" style="margin-bottom:10px;padding-bottom:25px;">
      {% if section.settings.img1 != blank %}

        <div class="grid__item--icon xlarge--one-quarter">
          <img data-src="{{section.settings.img1 | img_url: "master" }} " class=" lazyloaded" src="{{section.settings.img1 | img_url: "master" }}" alt="" width="40" height="40">
          <p class="headline">{{section.settings.title1}}
