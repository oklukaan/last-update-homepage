<style>
  .module--homepage-principles {
    margin-top: 45px;
  }
  @media screen and (max-width: 990px) {
    .grid__item--icon {
      width: 33%;
      align-items: center;
      text-align: center;
      flex-direction: column;
      margin-top: 20px;
    }
    #module--homepage-principles .custom_seperator {
      margin-inline: 140px !important;
    }
  }
  #module--homepage-principles .headline {
    font-weight: 400;
    line-height: 24px;
    font-size: 16px;
    text-align: center;
  }
  #module--homepage-principles .custom_seperator {
    width: 50px;
    height: 0;
    margin-inline: 515px;
    margin-top: 10px;
    border: none;
    border-top: 3px solid #E7AD99;
  }
  .heading3 {
    font-weight: 800;
    font-size: 24px;
    line-height: 24px;
    font-style: normal;
    text-transform: uppercase;
  }
  .grid__item--banner .heading3 {
    margin-top: 35px !important;
    padding-top: 30px;
  }
  .grid__item--banner{
    text-align:center;
  }
  .heading3:after{ 
      content: "";
      display: inline-block;
      width: 50px;
      padding-top: 3px;
      border-bottom:3px solid;
      border-color:#E7AD99;
      margin:0 auto;
    }
</style>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    let getParentDiv = document.getElementsByClassName("module--homepage-principles");
    for (var i = 0; i < getParentDiv.length; i++) {
      let getSubGrid = getParentDiv[i].getElementsByClassName("grid__item--icon");
      if (getSubGrid.length <= 4) {
        if (screen.width < 990) {
          for (var k = 0; k < getSubGrid.length; k++) {
            getSubGrid[k].style.width = "50%";
          }
        }
      }
    }
  });
</script>
<div class="page-width module module--fullbleed module--homepage-principles" id="module--homepage-principles">
  <div class="wrapper" style="background: #fafafa;">
    <div class="grid--flex">
      <div class="grid__item--banner">
