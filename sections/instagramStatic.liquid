      }, {
        "type": "text",
        "id": "url4",
        "label": "URL #4"
      }, {
        "type": "image_picker",
        "id": "img1",
        "label": "IMG"
      }, {
        "type": "image_picker",
        "id": "img2",
        "label": "IMG"
      }, {
        "type": "image_picker",
        "id": "img3",
        "label": "IMG"
      }, {
        "type": "image_picker",
        "id": "img4",
        "label": "IMG"
      }
    ],
    "presets": [
      {
